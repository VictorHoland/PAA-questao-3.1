int verificar(int vetor[],int n){

    for(int i = 0; i<n-1; i++){
        if(vetor[i] > vetor[i+1]){
            return 1;
        }
    }
    return 0;
}

int *virarTodos(int vetor[], int n, int finalizado){

int vetorAux[n];
int i;

    for(int i = 0; i<n ; i++){
        vetorAux[i] = vetor[i];
    }
    for( i = 0; i<finalizado ; i++){
        vetor[i] = vetorAux[finalizado-i-1];
    }
    return vetor;
}

int maior(int a, int *panqueca){

    int i,indice;
    int max = -99;

    for(i = 0; i< a; i++){
        if(panqueca[i] > max){
            max = panqueca[i];
            indice = i;
        }
    }
    return indice;
}

int *viraMaior(int panqueca[], int n ,int indice){

    int cont = 0;
    int vetor[n];

    for(int i = 0; i<7 ; i++){
        vetor[i] = panqueca[i];
    }

    for(n = indice; n>=0 ; n--){
        panqueca[cont] = vetor[n];
        cont++;
    }
    return panqueca;
}


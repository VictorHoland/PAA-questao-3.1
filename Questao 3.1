    int panqueca[7] = {2,4,6,1,3,7,5};
    int finalizado = 7;
    int indiceMaiorPanqueca;
    int *vetor;

    while(verificar(panqueca,7)){

        indiceMaiorPanqueca = maior(finalizado, panqueca);

        vetor = viraMaior(panqueca, 7, indiceMaiorPanqueca);


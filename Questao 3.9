    //maior numero na direita
    int vetor3[20] = {1,2,7,87,90,96,100,256,300,456,501,502,600,689,801,803,999,50,25,1};
    int n1,n2,n3;

    n1 = sizeof(vetor1)/sizeof(vetor1[0]);
    n2 = sizeof(vetor2)/sizeof(vetor2[0]);
    n3 = sizeof(vetor3)/sizeof(vetor3[0]);

    buscabinaria(vetor1, n1, n1, 0);
    buscabinaria(vetor2,n2, n2, 0);
    buscabinaria(vetor3,n3, n3, 0);

	return 0;
}

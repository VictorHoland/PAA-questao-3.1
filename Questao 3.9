void buscabinaria(int vetor[], int n, int direita, int esquerda){

    int meio;

    meio = (direita + esquerda)/2;

    if(vetor[meio] > vetor[meio -1] && vetor[meio]> vetor[meio + 1]){

        printf("\nMaior valor: %d, na posicao %d do vetor\n", vetor[meio], meio);
        return 1;

    }else if(vetor[meio] > vetor[meio -1] && vetor[meio]< vetor[meio + 1]){

        buscabinaria(vetor, n, direita, meio);

    }else if(vetor[meio] < vetor[meio -1] && vetor[meio]> vetor[meio + 1]){
        buscabinaria(vetor, n, meio, esquerda);
    }
}

